<Window x:Class="Heart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="canvas1" Opacity="1" Background="Beige" RenderTransformOrigin="0.5, 0.5 " >
        <Path Name="heart" Stroke="Black" Fill="Red" Data="
              M 240,200 
              A 20,20 0 0 0 200,240
              C 210,250 240,270 240,270
              C 240,270 260,260 280,240
              A 20,20 0 0 0 240,200
              " Height="50" Canvas.Top="192.02" Width="100" Canvas.Left="350" StrokeThickness="1" Stretch="Fill" >

            <Path.RenderTransform>
                <ScaleTransform ScaleX="1"
                                ScaleY="1">

                </ScaleTransform>
            </Path.RenderTransform>

            <Path.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="0"
                                  Color="Red"
                                  RenderingBias="Quality">

                </DropShadowEffect>
            </Path.Effect>

        </Path>
    </Canvas>
</Window>
