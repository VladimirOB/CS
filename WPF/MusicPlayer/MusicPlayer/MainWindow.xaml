        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="Music Player" Height="180" Width="350" Background="Transparent" WindowStyle="None" AllowsTransparency="True" Closing="Window_Closing">

    <Grid Height="180" Width="350" Background="Transparent">
        <Rectangle x:Name="backgroundMain" Width="350">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop x:Name="gr1" Color="Firebrick" Offset="0"/>
                    <GradientStop x:Name="gr2" Color="DodgerBlue" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
