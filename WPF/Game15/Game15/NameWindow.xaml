<Window x:Class="Game15.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game15"
        mc:Ignorable="d"
        Title="Name" MinHeight="200" MinWidth="400" Height="200" Width="400" MaxHeight="200" MaxWidth="400">
    <DockPanel>
        <Grid>
            <Label Content="Enter your name: " FontSize="24" Margin="90,0,0,0" />
            <TextBox Name="txtBox" HorizontalAlignment="Left" Margin="70,70,0,0" FontSize="24" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
            <Button Content="OK" HorizontalAlignment="Left" Margin="160,122,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="BtnOK_Click"/>

        </Grid>
    </DockPanel>
</Window>
